{
    "compilerOptions": {
		"allowSyntheticDefaultImports": true,
        "outDir": "./public",
        "allowJs": true,
		"jsx": "react",
		"lib": ["es6", "dom"],
		"module": "es2020",
		"moduleResolution": "node",
        "target": "es6",
		"skipLibCheck": true
    },
    "include": [
        "./src/**/*"
    ],
	"exclude": [
		"./node_modules/**/*"
	]
}